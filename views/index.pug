extends layout

block head
    title Vexillopedia | The flag encyclopedia
    link(rel="stylesheet", href="/css/index.css")
    script(defer scr="/js/index.js")

block body
    header
        h1 Vexillopedia | The flag encyclopedia

    main      
        div.welcome
            h3.welcome-title Welcome to Vexillopedia,
            p.welcome-text the flag encyclopedia!
        
        div.search
            h2.section-title Search Flags
            input#search-flag.search-input
            ul.card-list
                each flag in flags
                    li.card
                        a(href="/flag/" + flag.name) 
                            img(src="/flag/" + flag.image alt= flag.name)
                            span #{flag.name}
        
        p.or -or-
        
        div.categories
            h2.section-title Browse Categories
            ul.card-list
                each category in categories
                    li.card
                        a(href="/category/" + category) 
                            img(src="/category/" + category + ".svg" alt= category)
                            span #{category}